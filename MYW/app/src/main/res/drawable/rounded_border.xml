<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The background color of your EditText/TextView -->
    <solid android:color="@android:color/white" />

    <!-- The border (stroke) width and color -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- The corner radius for the rounded effect -->
    <corners android:radius="8dp" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
